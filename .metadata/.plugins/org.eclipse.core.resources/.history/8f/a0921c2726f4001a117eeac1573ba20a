package pvictor.aulapoo.digiage;

import java.util.LinkedList;

public class Task2 {

	LinkedList<String> lista = new LinkedList<String>();

	// ------------- Adicionar -------------------------
	public void setAddLista(String novo) {
		lista.add(novo);
	}
	// ------------- Remover -------------------------
	public void setRemoverItemDoMeio() {
		int size = lista.size();
		lista.remove(size / 2);
	}

	public void setRemoverItemEspecifico(String item) {
		lista.remove(item);
	}

	// ------------- Consultar ------------------------
	public void getLista() {
		System.out.println("Itens da lista: " + lista);

	}

	public String getPrimeiroItemLista() {

		return lista.getFirst();
	}

	public String getUltimoItemLista() {

		return lista.getLast();
	}

	public String getItemListaEspecifico(int indice) {

		return lista.get(indice);
	}

	

}
